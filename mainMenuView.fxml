<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="260.0" prefWidth="225.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
   <children>
      <VBox prefHeight="260.0" prefWidth="225.0">
         <children>
            <Label fx:id="mainmenulbl" alignment="CENTER" prefWidth="225.0" text="Main Menu">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="customerRecordslbl" mnemonicParsing="false" onAction="#showCustomers" prefWidth="190.0" text="Customer Records">
               <VBox.margin>
                  <Insets left="17.0" right="17.0" top="25.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="schedulinglbl" mnemonicParsing="false" onAction="#showAppointments" prefWidth="190.0" text="Appointments">
               <VBox.margin>
                  <Insets left="17.0" right="17.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="reportsbtn" mnemonicParsing="false" onAction="#showreports" prefWidth="190.0" text="Reports">
               <VBox.margin>
                  <Insets left="17.0" right="17.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitbtn" mnemonicParsing="false" onAction="#onactionexit" prefWidth="85.0" text="Exit">
               <VBox.margin>
                  <Insets left="69.5" right="69.5" top="25.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
